{
  "name": "ts-file-coverage",
  "version": "1.0.0",
  "description": "Analyze TypeScript adoption in your codebase with framework-specific breakdowns and color-coded coverage reports",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ts-file-coverage": "./bin/ts-file-coverage"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "check": "npm run lint && npm run format:check",
    "prepublishOnly": "npm run check && npm run test && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "typescript",
    "javascript",
    "analysis",
    "cli",
    "migration",
    "coverage",
    "codebase",
    "statistics",
    "vue",
    "react",
    "tsx",
    "jsx"
  ],
  "author": "Anton Chetardie <anton.chetardie@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chetardie/ts-file-coverage.git"
  },
  "bugs": {
    "url": "https://github.com/Chetardie/ts-file-coverage/issues"
  },
  "homepage": "https://github.com/Chetardie/ts-file-coverage#readme",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^11.0.0",
    "fast-glob": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.44.1",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
